<h1>一覧</h1>
<% @pictures.each do |picture| %>
  <ul class="index_list">
    <li><%= image_tag picture.image.url %></li>
    <li>ユーザー: <%= picture.user.name %></li>
    <li>内容: <%= picture.content %></li>
    <%= link_to '詳細', picture_path(picture.id), class:"btn btn-secondary" %>
      <% if logged_in? %>
      <% if picture.user.id == current_user.id %>
      <%= link_to ' 編集', edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' }, class:"btn btn-secondary"  %>
      <%= link_to ' 削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class:"btn btn-secondary"  %>
      <% end %>
      <% end %>
  </ul>
<% end %>
